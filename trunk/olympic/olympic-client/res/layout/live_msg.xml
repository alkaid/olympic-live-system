<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >	
    <TextView android:id="@+id/live_time" android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" android:textSize="20sp"/>
    <TextView android:id="@+id/live_name" android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" android:textSize="20sp"/>
    <TextView android:id="@+id/textlive_entrance" android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" android:textSize="20sp" android:text="文字直播"
	    android:layout_marginLeft="6dp"/>
    <TextView android:id="@+id/video_entrance" android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" android:textSize="20sp" android:text="视频直播"
	    android:layout_marginLeft="6dp"/>
</LinearLayout>